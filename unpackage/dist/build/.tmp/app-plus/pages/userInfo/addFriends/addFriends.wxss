.page {
  width: 100%;
  min-height: 100vh;
  background: #ddd;
  font-size: 30rpx;
}
.page .userInfo {
    background: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
            justify-content: flex-start;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-flow: row;
            flex-flow: row;
    padding: 30rpx;
    box-sizing: border-box;
}
.page .userInfo image {
      width: 100rpx;
      height: 100rpx;
      border-radius: 10rpx;
}
.page .userInfo .info {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
              justify-content: flex-start;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-flow: column;
              flex-flow: column;
      margin-left: 20rpx;
}
.page .userInfo .info-top {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: start;
        -webkit-justify-content: flex-start;
                justify-content: flex-start;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        -webkit-flex-flow: row;
                flex-flow: row;
        font-size: 30rpx;
        font-weight: bold;
}
.page .userInfo .info-top image {
          width: 40rpx;
          height: 40rpx;
          margin-left: 10rpx;
}
.page .userInfo .info .area {
        color: gray;
        font-size: 28rpx;
        font-weight: normal;
        margin-top: 10rpx;
}
.page .desc {
    background: #fff;
    padding: 20rpx;
    margin-top: 20rpx;
}
.page .desc .descTitle {
      font-weight: bold;
}
.page .desc .descTitle .descInfo {
        color: gray;
        font-weight: normal;
        margin-left: 10rpx;
}
.page .addBtn {
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    background: #fff;
    color: #566a94;
    margin-top: 20rpx;
    font-weight: bold;
    font-size: 35rpx;
}

